{
  "name": "heimrichhannot/contao-input-counter-bundle",
  "type": "contao-bundle",
  "description": "This bundle offers character counting for backend fields for a better editing usability.",
  "license": "LGPL-3.0-or-later",
  "require": {
    "php": "^7.1 || ^8.0",
    "contao/core-bundle": "^4.4",
    "heimrichhannot/contao-utils-bundle": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "HeimrichHannot\\InputCounterBundle\\": "src/"
    },
    "classmap": [
      "src/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "HeimrichHannot\\InputCounterBundle\\ContaoManager\\Plugin",
    "foxy": true
  }
}
